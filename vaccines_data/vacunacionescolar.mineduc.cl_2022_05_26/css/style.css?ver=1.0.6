/* Safari 4.0 - 8.0 */
@-webkit-keyframes mymove {
    0%   {opacity: 0;}
    25%  {opacity: 1;  }
    50%  {opacity: 0; }
    75%  {opacity: 1; }
    100% {opacity: 0;}
}

/* Standard syntax */
@keyframes mymove {
    0%   {opacity: 0;}
    25%  {opacity: 1;  }
    50%  {opacity: 0; }
    75%  {opacity: 1; }
    100% {opacity: 0;}
}

.logo_movil_gob { display: none}

@media ( max-width:1499px) {
	#top .navbar .nav-item { font-size: 18px;}
}


@media ( max-width:1399px) {
	#top .navbar .nav-item { font-size: 16px; }
	#top .navbar .nav-item a { color: #fff; padding-right: 1rem; padding-left: 1rem;}
}


@media ( max-width:1199px) {
	#slide_ppal h2 img { max-height: 400px;}
}




@media ( max-width:991px) {
	#slide_ppal h2 img { max-height: 400px; margin: 0 15px;}
	#slide_ppal .min_ed img {    width: 130px;}
	#postula p { font-size: 18px;}  
	#top .navbar .nav-item {    font-size: 15px;}
	/*#logo_mineduc {display: none;}*/
	
	#dudas h2.int_postula {background-size: 50px; font-size: 20px !important; margin: 0 0 20px !important}
	#dudas .mod_fecha {    margin: 0 0 20px;}
	
}
@media ( max-width:767px) {
	#slide_ppal {padding: 150px 0 0 0}
	.logo_movil_gob { display: block; margin: 13px auto 0; text-align: center;}
	
	#top .navbar .navbar-brand img { max-width: 130px;}
	/*#logo_mineduc {display: none;}*/
	
	.navbar-toggler-icon { height: 3px; background: #fff; position: relative}
	.navbar-toggler-icon::before { content: "";    height: 3px;    margin: 0;    position: absolute;    top: -10px;    width: 100%;    background: #fff;    left: 0;}
	.navbar-toggler-icon::after { content: "";    height: 3px;    margin: 0;    position: absolute;    top: 10px;    width: 100%;    background: #fff;    left: 0;}
	
	
	#slide_ppal h2.int_postula,
	#dudas h2.int_postula,
	#postula2 h2.int_postula{ font-size: 28px; margin: 0 15px}
	
	#postula .links .boton,
	#postula .links .boton.post,
	#postula2 .links .boton,
	#postula2 .links .boton.post { font-size: 20px; max-width: 280px; margin: 0 auto 10px;}
	
	
	#recuerda h3 { font-size: 16px}
	#slide_ppal {padding: 100px 0 0 0;    height: 430px !important;}
	
	
}
@media ( max-width:414px) {
	/*#logo_mineduc {display: none;}*/
	p { font-size: 19px !important;}
	
	#slide_ppal h2.int_postula, #dudas h2.int_postula, #postula2 h2.int_postula {    font-size: 25px;    margin: 0 15px;}
	#postula2 { padding: 40px 0  0!important}
	#postula2 .call_center img { max-width: 280px}
	#slide_ppal h2 img { max-height: 220px;}
	#slide_ppal .min_ed img {    width: 80px;}
	#postula p {    font-size: 19px;}
